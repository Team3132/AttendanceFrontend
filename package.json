{
  "name": "AttendanceSystem",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Team3132/AttendanceSystem.git",
  "author": "Sebastian Pietschner <sebastian.pietschner@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:frontend": "yarn workspace frontend build",
    "build:backend": "yarn workspace backend build",
    "build": "concurrently \"npm:build:*\"",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:backend": "yarn workspace backend dev",
    "dev": "concurrently \"npm:dev:*\"",
    "lint:frontend": "yarn workspace frontend lint",
    "lint:backend": "yarn workspace backend lint",
    "lint": "yarn lint:frontend && yarn lint:backend",
    "typecheck:frontend": "yarn workspace frontend tsc --noEmit",
    "typecheck:backend": "yarn workspace backend tsc --noEmit",
    "typecheck": "yarn typecheck:frontend && yarn typecheck:backend"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "rimraf": "^4.1.2"
  }
}
