{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchSourceUrls": [
        "https://github.com/TanStack/table"
      ],
      "groupName": "Tanstack table monorepo packages"
    }
  ],
  "rangeStrategy": "pin",
  "addLabels": [
    "renovate"
  ]
}
