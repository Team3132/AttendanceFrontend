{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "websocket:default",
    "websocket:allow-connect",
    "notification:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:1420/api/*"
        },
        {
          "url": "https://attendance.team3132.com/api/*"
        },
        {
          "url": "https://*.discord.com/*"
        }
      ],
      "deny": []
    }
  ]
}