{
  "productName": "TDU Attendance System Desktop",
  "version": "0.0.1",
  "identifier": "com.team3132.attendance",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "skipWebviewInstall": true
      }
    }
  },
  "plugins": {
    "deep-link": {
      "domains": [
        {
          "host": "attendance.team3132.com",
          "pathPrefix": [
            "/desktop"
          ]
        }
      ]
    },
    "updater": {
      "endpoints": [
        "https://github.com/Team3132/AttendanceSystem/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBQTJCRDZCQTcwMTlBMDgKUldRSW1nR25hNzJpU3NFcE5HQUxMTzZNK2F1QUY0MGJNMGN5MWUrNW12UDArb1dBTWtFL0o0QmsK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}