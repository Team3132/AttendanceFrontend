{
  "$schema": "./schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [{ "url": "http://localhost:1420/*" }, { "https://attendance.team3132.com/*" }],
      "deny": []
    }
  ]
}
